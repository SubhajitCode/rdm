{
  "name": "rdm Integration",
  "manifest_version": 3,
  "version": "1.0.0",
  "description": "Intercept and accelerate downloads with rdm (Rust Download Manager).",
  "browser_specific_settings": {
    "gecko": {
      "id": "rdm-integration@rdm",
      "strict_min_version": "109.0"
    }
  },
  "action": {
    "default_icon": {
      "16":  "icons/icon16.png",
      "48":  "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon16.png",
        "icons/icon48.png",
        "icons/icon128.png",
        "icons/icon16-mono.png",
        "icons/icon48-mono.png",
        "icons/icon128-mono.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["*://*/*"],
  "permissions": [
    "downloads",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "contextMenus",
    "alarms"
  ],
  "background": {
    "scripts": ["src/background/bundle.js"]
  },
  "icons": {
    "16":  "icons/icon16.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en_US"
}
